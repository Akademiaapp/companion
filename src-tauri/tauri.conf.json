{
  "build": {
    "beforeDevCommand": "cd frontend && bun run dev",
    "beforeBuildCommand": "cd frontend/ && bun install && bun run build",
    "devPath": "http://localhost:5173",
    "distDir": "../frontend/build",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "Akademia",
    "version": "0.0.57"
  },
  "tauri": {
    "systemTray": {
      "iconPath": "icons/icon.png",
      "title": "Akademia",
      "iconAsTemplate": false,
      "menuOnLeftClick": false
    },
    "allowlist": {
      "notification": {
        "all": true
      }
    },
    "security": {
      "csp": null,
      "dangerousRemoteDomainIpcAccess": [
        {
          "domain": "https://github.com/login/oauth/authorize",
          "windows": [
            "main"
          ],
          "enableTauriAPI": true
        },
        {
          "domain": "https://dashboard.akademia.cc/oauth_callback/github",
          "windows": [
            "main"
          ],
          "enableTauriAPI": true
        }
      ]
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Akademia",
        "fileDropEnabled": false
      }
    ],
    "bundle": {
      "active": true,
      "targets": [
        "deb",
        "appimage",
        "nsis",
        "app",
        "dmg",
        "updater"
      ],
      "identifier": "dk.akademiaapp.companion",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "updater": {
      "active": true,
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDhGRjk2QTc1MzE4QkIyOUQKUldTZHNvc3hkV3I1anpkTy90SnVlaUZoanViMVZBZmROTDhFMXdxNmQxNkJqRW1mU3hMREtSL2MK",
      "endpoints": [
        "https://github.com/Akademiaapp/companion/releases/latest/download/latest.json"
      ]
    }
  }
}
